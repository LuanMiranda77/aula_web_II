@page
@model RegisterModelMedico
@{
    ViewData["Title"] = "Nova Conta";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Bem vindo Médico.</h2>
            <hr />
            <h5>Informações</h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            @*Parte do tbProfissional*@
            <div class="form-group w-50">
                <label asp-for="Input.TbProfissional.Cpf" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Cpf" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.Nome" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Nome" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.TbProfissional.IdTipoProfissional" class="control-label"></label>
                <input asp-for="Input.TbProfissional.IdTipoProfissional" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.IdTipoProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.IdContratoNavigation.IdPlano" class="control-label"></label>
                <select asp-for="Input.TbProfissional.IdContratoNavigation.IdPlano" class="form-control" asp-items="ViewBag.IdPlano"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.IdTipoAcesso" class="control-label"></label>
                <select asp-for="Input.TbProfissional.IdTipoAcesso" class="form-control" asp-items="ViewBag.IdTipoAcesso"></select>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.CrmCrn" class="control-label"></label>
                <input asp-for="Input.TbProfissional.CrmCrn" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.CrmCrn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.Especialidade" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Especialidade" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Especialidade" class="text-danger"></span>
            </div>
            <h5 class="mt-3">Endereço</h5>
            <hr />
            <div class="form-group w-25">
                <label asp-for="Input.TbProfissional.Cep" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Cep" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.Logradouro" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Logradouro" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.Numero" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Numero" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.IdCidade" class="control-label"></label>
                <select asp-for="Input.TbProfissional.IdCidade" class="form-control" asp-items="ViewBag.IdCidade"></select>
            </div>

            <div class="form-group">
                <label asp-for="Input.TbProfissional.Bairro" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Bairro" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Bairro" class="text-danger"></span>
            </div>
            <div class="d-flex">
                <div class="form-group w-25 me-3">
                    <label asp-for="Input.TbProfissional.Ddd1" class="control-label"></label>
                    <input asp-for="Input.TbProfissional.Ddd1" class="form-control" />
                    <span asp-validation-for="Input.TbProfissional.Ddd1" class="text-danger"></span>
                </div>
                <div class="form-group w-75">
                    <label asp-for="Input.TbProfissional.Telefone1" class="control-label"></label>
                    <input asp-for="Input.TbProfissional.Telefone1" class="form-control" />
                    <span asp-validation-for="Input.TbProfissional.Telefone1" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <div class="form-group w-25 me-3">
                    <label asp-for="Input.TbProfissional.Ddd2" class="control-label"></label>
                    <input asp-for="Input.TbProfissional.Ddd2" class="form-control" />
                    <span asp-validation-for="Input.TbProfissional.Ddd2" class="text-danger"></span>
                </div>
                <div class="form-group w-75">
                    <label asp-for="Input.TbProfissional.Telefone2" class="control-label"></label>
                    <input asp-for="Input.TbProfissional.Telefone2" class="form-control" />
                    <span asp-validation-for="Input.TbProfissional.Telefone2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.TbProfissional.Salario" class="control-label"></label>
                <input asp-for="Input.TbProfissional.Salario" class="form-control" />
                <span asp-validation-for="Input.TbProfissional.Salario" class="text-danger"></span>
            </div>
            <h5 class="mt-3">Dados de acesso</h5>
            <hr/>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
   <div class="col-md-6 col-md-offset-2">
        <section>
            <img src="https://www.labclinconfresa.com.br/img/logo.png?v=1713552589" alt="logo" />
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
